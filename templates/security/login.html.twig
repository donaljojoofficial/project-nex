

{% extends 'base.html.twig' %}

{% block title %}Login | IntruNex{% endblock %}

{% block body %}
<section style="background:#000; color:#0f0; padding:3rem; text-align:center;">
    <h1 style="font-size:2.5rem;">🔐 IntruNex Login</h1>
    <form method="post" style="margin-top:2rem;">
        <input type="email" name="_username" placeholder="Email" required
            style="background:#111; border:2px solid #0f0; color:#0ff; padding:0.8rem; margin-bottom:1rem; width:300px;"><br>
        <input type="password" name="_password" placeholder="Password" required
            style="background:#111; border:2px solid #0f0; color:#0ff; padding:0.8rem; margin-bottom:1rem; width:300px;"><br>
        <button type="submit" style="background:#0f0; color:#000; padding:0.8rem 2rem;">Login</button>
    </form>
    <p style="margin-top:1rem;"><a href="/register" style="color:#0ff;">Need an account? Register</a></p>
</section>
{% endblock %}
